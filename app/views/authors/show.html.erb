<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title text-center">Author Profile</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class=" text-center"> 
        <table class="table ">
          <tbody>
            <tr>
              <td>First name: <%=@author.first_name.capitalize%></td>
            </tr>
            <tr>
              <td>Last name: <%=@author.last_name.capitalize%></td>
            </tr>
            <tr>
              <td>Birthday: <%=@author.birthday%></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="panel-footer text-center">
    <%= link_to 'Edit Author', edit_author_path(@author), class: 'btn btn-default'%>
    <%= link_to 'Delete', author_path, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Cancel', authors_path, class:'btn btn-default'%>
  </div>
</div>
