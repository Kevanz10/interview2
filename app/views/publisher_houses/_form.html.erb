<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title text-center">Publisher House</h3>
  </div>
  <div class="panel-body">
    <%= form_for(@house) do |f| %>
      <table class="table table-user-information">
        <tbody>
          <tr>
            <% if @house.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@house.errors.count, "error") %> prohibited this house from being saved:</h2>
                <ul>
                  <% @house.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </tr>
          <tr>
            <td><%= f.label :name %></td>
            <td><%= f.text_field :name, class: 'form-control' %></td>
          </tr>
          <tr class="top">
            <td><%= f.submit class: 'btn btn-success' %></td>
            <td>
              <%unless params[:action] == "new"%>
                 <%= link_to 'Cancel', publisher_house_path(@house), class: 'btn btn-default'%>
              <%end%>
            </td>
          </tr>
          </tbody>
          </table>
        <%end%>
      </div>
    </div>
  </div>
</div>