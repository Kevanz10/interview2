<div class="container">
  <table class="table">
    <thead>
      <tr class= 'row'>
        <th class= 'col-md-4'>Title</th>
        <th class= 'col-md-4'>Publisher House</th>
        <th class= 'col-md-4'>Delete button</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr class= 'row'>
         <td class= 'col-md-4'>
            <%= link_to book_path(book) do%>
              <%= book.title %>
            <%end%>
         </td>
          <td class= 'col-md-4'><%= book.publisher_house.name %></td>
          <td class= 'col-md-4'><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>